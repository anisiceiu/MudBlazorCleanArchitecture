@inherits LayoutComponentBase


<style>
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* full viewport height */
        background: linear-gradient(135deg, #4a90e2, #50e3c2); /* nice gradient */
    }

    .login-card {
        padding: 2rem;
        max-width: 400px;
        width: 100%;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        background-color: #ffffff;
    }
</style>

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
  <MudContainer>
        <MudMainContent Class="login-page">
        @Body
        </MudMainContent>
  </MudContainer>    
</MudLayout>